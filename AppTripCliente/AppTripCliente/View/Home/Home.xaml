<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTripCliente.View.Home.Home"
             NavigationPage.HasNavigationBar="False">
    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*" />
                <RowDefinition Height="0.6*" />
                <RowDefinition Height="0.4*" />
            </Grid.RowDefinitions>
            <Frame BackgroundColor="#455968"
                   Grid.Row="0"
                   CornerRadius="10"
                   HorizontalOptions="Start"
                   Margin="20,10,0,0"
                   Padding="10">
                <Label Text="Inicio"
                       TextColor="White"
                       FontAttributes="Bold"
                       FontSize="25"
                       Margin="0,-15,0,-10"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand" />
            </Frame>
            <Image Source="LOGOTRIP"
                   HorizontalOptions="End"
                   Margin="0,-20,10,-35" />
            <Frame BackgroundColor="#F0F0F0"
                   Grid.Row="1"
                   Margin="30,30,30,30"
                   CornerRadius="35">
                <StackLayout Orientation="Horizontal"
                             Margin="0,-10,0,-10">
                    <Label Text="Asigna un viaje ahora"
                           TextColor="Black"
                           FontAttributes="Bold"
                           FontSize="20"
                           HorizontalOptions="CenterAndExpand"
                           VerticalOptions="CenterAndExpand" />
                    <Image Source="timetable"
                           HorizontalOptions="EndAndExpand" 
                           Margin="0,0,20,0"/>
                </StackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToQuoteTripCommand}"/>
                </Frame.GestureRecognizers>
            </Frame>
            <Frame Grid.Row="2"
                   BackgroundColor="Transparent"
                   HasShadow="False">
                <StackLayout Margin="-15">
                    <Label Text="Cotizaciones"
                           TextColor="Black"
                           FontAttributes="Bold"
                           FontSize="25"
                           Margin="10,0,0,0" />
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Oprime aqui para mostrar tus"
                               TextColor="Black"
                               FontAttributes="Bold"
                               FontSize="14"
                               VerticalOptions="EndAndExpand"
                               Margin="10,0,0,0" />
                        <Label Text="Viajes Pendientes"
                               TextColor="#751BBB"
                               FontAttributes="Bold"
                               FontSize="14"
                               VerticalOptions="EndAndExpand">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToPendingTripsCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </StackLayout>
            </Frame>
            
        </Grid>
        <ContentView Grid.Row="1"
                     x:Name="QuotesView" />
    </Grid>
</ContentPage>