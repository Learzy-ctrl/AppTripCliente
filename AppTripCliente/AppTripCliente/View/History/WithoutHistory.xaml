<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTripCliente.View.History.WithoutHistory">
    <Grid RowDefinitions="4*,6*">
        <Grid Grid.Row="0"
              RowDefinitions="3*,7*">
            <Label Text="Ups... no tienes viajes realizados, Empezemos uno nuevo"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="18"
                   Margin="10"/>
            <Button Grid.Row="1"
                    Text="Realiza un viaje"
                    TextColor="White"
                    BackgroundColor="#455968"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="StartAndExpand"
                    CornerRadius="15"
                    Padding="20"
                    FontAttributes="Bold"
                    Command="{Binding GoToQuoteTripCommand}"/>
        </Grid>
        
    </Grid>
</ContentView>